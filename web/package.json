{
  "name": "@sciol/xyzen",
  "packageManager": "yarn@4.9.2",
  "version": "0.1.6",
  "description": "A modern, lightweight, and extensible chat component for React.",
  "author": "Haohui <harveyque@outlook.com>",
  "private": false,
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/ScienceOL/Xyzen.git"
  },
  "homepage": "https://xyzen.sciol.ac.cn",
  "keywords": [
    "react",
    "chat",
    "component",
    "xyzen"
  ],
  "main": "./dist/xyzen.umd.js",
  "module": "./dist/xyzen.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/xyzen.es.js",
      "require": "./dist/xyzen.umd.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --host --port 32233 --strictPort",
    "build": "rimraf site && tsc -b && vite build",
    "build:lib": "rimraf dist && cross-env BUILD_MODE=library vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "publish": "yarn npm publish"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@emotion/is-prop-valid": "^1.3.1",
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.83.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.9",
    "immer": "^10.1.1",
    "katex": "^0.16.22",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "react-use-websocket": "^4.13.0",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "tailwindcss": "^4.1.11",
    "uuid": "^11.1.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "cross-env": "^10.0.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7",
    "vite-plugin-dts": "^4.5.4"
  }
